{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "built",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*", "./typings/index.d.ts", "./testSetup.ts"]
}
